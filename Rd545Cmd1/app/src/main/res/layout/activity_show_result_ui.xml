            android:layout_marginTop="180dp"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:text="Right arm\nmuscle\n2.4 kg"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/BodyFatRightArm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="100dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:text="Right arm\nfat rate\n20%"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/MuscleMassLeftFoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="200dp"
            android:padding="10dp"
            android:text="Left limb\nmuscle\n7.0 kg"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/BodyFatLeftFoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="510dp"
            android:layout_marginEnd="200dp"
            android:padding="10dp"
            android:text="Left limb\nfat rate\n7.0 %"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/MuscleMassLeftArm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="100dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="215dp"
            android:padding="10dp"
            android:text="Left arm\nmuscle\n2.3 kg"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/BodyFatLeftArm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="100dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="215dp"
            android:padding="10dp"
            android:text="Left arm\nfat rate\n20%"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/MuscleMassRightFoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="80dp"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="30dp"
            android:padding="10dp"
            android:text="Right limb\nmuscle\n7.1 kg"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/BodyFatRightFoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="80dp"
            android:layout_marginTop="510dp"
            android:layout_marginEnd="30dp"
            android:padding="10dp"
            android:text="Right limb\nfat rate\n7.1 %"
            android:textColor="#FF0000"
            android:textSize="14sp" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>